<Window x:Class="Gatosyocora.VRCPhotoAlbum.Views.PhotoPreview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gatosyocora.VRCPhotoAlbum.Views"
        mc:Ignorable="d"
        Title="PhotoPreview" Height="450" Width="800">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="PreviewImage"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Source="{Binding Image}"
               Grid.Row="0"/>
        <ListView x:Name="UserListView"
                ItemsSource="{Binding UserList}"
                SelectionMode="Single"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                Grid.Column="1"
                Grid.Row="0"
                SelectionChanged="UserListView_SelectionChanged">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="{Binding UserName}"
                               Grid.Column="0"/>
                        <Button x:Name="TwitterButton"
                                Click="Button_Click"
                                CommandParameter="{Binding TwitterScreenName}"
                                Visibility="{Binding HasTwitterScreenName, Converter={StaticResource BoolVisibilityConverter}}"
                                Grid.Column="1">
                            <Button.Background>
                                <SolidColorBrush Opacity="0"/>
                            </Button.Background>
                            <Button.BorderBrush>
                                <SolidColorBrush Opacity="0"/>
                            </Button.BorderBrush>
                            <Image Source="../Resources/Twitter_Social_Icon_Circle_Color.png" Width="20" Height="20"/>
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label x:Name="WorldName"
                       Grid.Row="0"
                       Content="{Binding WorldName}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <Label x:Name="PhotoGrapher"
                       Grid.Row="1"
                       Content="{Binding PhotographerName}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <Label x:Name="PhotoDateTime"
                       Grid.Row="2"
                       Content="{Binding PhotoDateTime}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
